{
  "name": "gdrive-mcp-token-auth",
  "version": "1.0.0",
  "description": "MCP server for interacting with Google Drive and Sheets using access token authentication",
  "license": "MIT",
  "author": "Modified from @isaacphi/mcp-gdrive",
  "homepage": "https://github.com/isaacphi/mcp-gdrive",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/isaacphi/mcp-gdrive.git"
  },
  "keywords": [
    "Google Drive",
    "Google Sheets",
    "MCP",
    "Model Context Protocol",
    "AI",
    "Access Token"
  ],
  "bin": {
    "mcp-gdrive": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "start": "node dist/index-http.js",
    "start:http": "node dist/index-http.js",
    "dev": "npm run build && npm start",
    "dev:http": "npm run build && npm run start:http",
    "generate-token": "node scripts/generate-token.js",
    "refresh-token": "node scripts/refresh-token.js",
    "test-auth": "npm run build && node scripts/test-auth.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.5.0",
    "dotenv": "^16.5.0",
    "googleapis": "^144.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/node": "^22.9.3",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "shx": "^0.3.4",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
